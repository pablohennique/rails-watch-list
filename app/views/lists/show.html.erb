<div class="card-category mb-4" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.squarespace-cdn.com/content/v1/5238a985e4b052b32771f777/1532798892106-EHFF1BQ8G38FVPJWVVO2/q-theatre-banner.jpg?format=2500w)">
  <%= @list.name %>
</div>

<%= link_to 'add a movie', new_list_bookmark_path(@list), class: 'btn btn-primary m-3' %>

<div class="container">
  <% @movies.each do |movie| %>
    <div class="mb-4">
      <h3><%= movie.title %></h3>
      <p>Rating: <%= movie.rating %></p>
      <img src="<%= movie.poster_url %>" width=200 alt="<%= movie.title %>">
    </div>
  <% end %>
</div>
